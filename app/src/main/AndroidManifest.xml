<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a1_aksharajsinh_parmar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.A1_Aksharajsinh_Parmar">

        <!-- Declare MainActivity as the launcher activity with exported=true -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declare all other activities with exported=false -->
        <activity
            android:name=".TeamRegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".DisplayActivity"
            android:exported="false" />
        <activity
            android:name=".HackathonInfoActivity"
            android:exported="false" />
        <activity
            android:name=".HackathonPrizeActivity"
            android:exported="false" />

    </application>

</manifest>
